<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#f1f3f2"
                android:endColor="#81a3a7"
                android:startColor="#81a3a7"
                android:type="linear"/>
            <stroke
                android:width="4dp"
                android:color="#c2d3da"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#f1f3f2"
                android:endColor="#81a3a7"
                android:startColor="#81a3a7"
                android:type="linear"/>
            <stroke
                android:width="4dp"
                android:color="#c2d3da"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#70c2d3da"/>
            <corners
                android:radius="4dp"/>
            <gradient
                android:angle="-90"
                android:centerColor="#70f1f3f2"
                android:endColor="#7081a3a7"
                android:startColor="#7081a3a7"
                android:type="linear"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>
</selector>